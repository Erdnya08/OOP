# Имя выходного файла
TARGET = main

# Компилятор и флаги
CXX = g++
CXXFLAGS = -Wall -g -I. -I..   # Добавили -I.. для поиска заголовков на уровень выше и -I. для текущей директории

# Список исходных файлов
SRCS = $(wildcard *.cpp skills/*.cpp)

# Генерация списка объектных файлов на основе исходных файлов
OBJS = $(SRCS:.cpp=.o)

# Правило для сборки всего проекта
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJS)

# Правило для компиляции .cpp в .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Правило для очистки сгенерированных файлов
clean:
	rm -f $(OBJS) $(TARGET)